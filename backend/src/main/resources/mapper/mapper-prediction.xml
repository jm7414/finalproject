<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="lx.project.dementia_care.dao.PredictionDAO">
	
	<!-- 예상위치에 들어오면 예측 모델로 보내기위해 28일간의 데이터를 불러옴  -->
	<select id="getLocationData" parameterType="lx.project.dementia_care.vo.PredictVO">
		SELECT user_no, latitude, longitude, record_time
        FROM user_location
        WHERE user_no = #{userNo} AND record_time &lt; #{recordTime}
        ORDER BY record_time ASC
    </select>

</mapper>

